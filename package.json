{
  "name": "web-portfolio-creator",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/4citeB4U/webportfoliocreator.git"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "node check-components.js",
    "deploy": "npm run build && node deploy.js",
    "migrate:up": "node server/migrations/run.js up",
    "migrate:down": "node server/migrations/run.js down",
    "db:seed": "node server/migrations/seed.js",
    "setup": "chmod +x init-dev.js && npm install && node init-dev.js",
    "postinstall": "chmod +x init-dev.js",
    "reset": "rm -rf node_modules package-lock.json && npm run setup",
    "lint:md": "markdownlint \"**/*.md\" --fix",
    "spell-check": "cspell \"**/*.{js,jsx,ts,tsx,md,json}\""
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@neondatabase/serverless": "^0.7.2",
    "@tanstack/react-query": "^5.0.0",
    "@supabase/supabase-js": "^2.39.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.29.3",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wouter": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.16",
    "@types/pg": "^8.11.0",
    "@types/react": "^19.0.10",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "cspell": "^8.3.2",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "markdownlint-cli": "^0.39.0",
    "postcss": "^8.4.35",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "cspell": {
    "import": ["./cspell-words.json"],
    "ignorePaths": [
      "node_modules/**",
      "dist/**",
      "build/**",
      "coverage/**",
      ".git/**"
    ]
  },
  "markdownlint": {
    "default": true,
    "MD013": false,
    "MD034": false
  }
}
